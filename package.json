{
  "name": "clean-node-api",
  "version": "1.2.1",
  "description": "NodeJs Rest API using TDD, Clean Architecture and Typescript",
  "author": "Pedro Vaz",
  "license": "ISC",
  "scripts": {
    "start": "node dist/main/server.js",
    "build": "rimraf dist && tsc",
    "debug": "nodemon -L --watch ./dist --inspect=0.0.0.0:9222 --nolazy ./dist/main/server.js",
    "up": "yarn build && docker-compose up -d",
    "down": "docker-compose down",
    "reboot": "yarn down && yarn up",
    "upgrade:packages": "npx yarn-check -s -u",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:verbose": "jest --passWithNoTests --runInBand",
    "test:unit": "yarn test --watch -c jest-unit.config.js",
    "test:integration": "yarn test --watch -c jest-integration.config.js",
    "test:staged": "yarn test --findRelatedTests",
    "test:ci": "yarn test --coverage",
    "test:ghostbuster": "jest --clearCache",
    "prepare": "husky install"
  },
  "engines": {
    "node": "16.x"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^2.2.0",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "27.4.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "17.0.14",
    "@types/supertest": "^2.0.11",
    "@types/validator": "^13.7.1",
    "@typescript-eslint/eslint-plugin": "5.10.2",
    "eslint": "8.8.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "6.0.0",
    "eslint-plugin-standard": "^5.0.0",
    "git-commit-msg-linter": "4.0.7",
    "husky": "^7.0.4",
    "jest": "27.4.7",
    "lint-staged": "12.3.3",
    "rimraf": "^3.0.2",
    "supertest": "^6.2.1",
    "ts-jest": "27.1.3",
    "typescript": "4.5.5"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "express": "^4.17.2",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^4.3.0",
    "validator": "^13.7.0"
  }
}
